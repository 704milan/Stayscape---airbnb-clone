<% layout("/layouts/boilerplate") -%>
<div
  class="filters_container mt-4 row row-cols-lg-6 row-cols-md-5 row-cols-sm-4 row-cols-2"
>
  <div class="filter col">
    <div class="filter_components">
      <i class="fa-solid fa-fire"></i>
      <p class="filter-component-text">Trending</p>
    </div>
  </div>
  <div class="filter col">
    <div class="filter_components">
      <i class="fa-solid fa-bed"></i>
      <p class="filter-component-text">Rooms</p>
    </div>
  </div>
  <div class="filter col">
    <div class="filter_components">
      <i class="fa-solid fa-mountain-city"></i>
      <p class="filter-component-text">Mountain cities</p>
    </div>
  </div>
  <div class="filter col">
    <div class="filter_components">
      <i class="fa-solid fa-mountain"></i>
      <p class="filter-component-text">Mountains</p>
    </div>
  </div>
  <div class="filter col">
    <div class="filter_components">
      <i class="fa-brands fa-fort-awesome"></i>
      <p class="filter-component-text">Castel cities</p>
    </div>
  </div>
  <div class="filter col">
    <div class="filter_components">
      <i class="fa-solid fa-person-swimming"></i>
      <p class="filter-component-text">Pools</p>
    </div>
  </div>
  <div class="filter col">
    <div class="filter_components">
      <i class="fa-solid fa-tent"></i>
      <p class="filter-component-text">Camp</p>
    </div>
  </div>
  <div class="filter col">
    <div class="filter_components">
      <i class="fa-solid fa-cow"></i>
      <p class="filter-component-text">Farms</p>
    </div>
  </div>
  <div class="filter col">
    <div class="filter_components">
      <i class="fa-regular fa-snowflake"></i>
      <p class="filter-component-text">Arctic regions</p>
    </div>
  </div>
  <div class="form-check form-switch ms-auto tax-display">
    <input
      class="form-check-input"
      type="checkbox"
      role="switch"
      id="showTaxesButton"
    />
    <p class="tax-text">Display total after taxes</p>
  </div>
</div>
<div
  class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-1 allLisstings"
>
  <% for (let listing of allListings){ %>
  <div class="listing-card card col">
    <a class="listing-image-click" href="/listings/listing/<%= listing._id %>">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
      />
      <div class="card-hover-effect card-img-overlay"></div>
    </a>
    <a class="listing-text-click" href="/listings/listing/<%= listing._id %>">
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%></b>
          <br />
          &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
          <i class="taxInfo"> &nbsp; &nbsp; + 18% GST</i>
        </p>
      </div>
    </a>
  </div>
  <%}%>
</div>

<script>
  let taxSwitch = document.getElementById("showTaxesButton");
  taxSwitch.addEventListener("click",()=>{
    let taxes = document.getElementsByClassName("taxInfo");
    for(tax of taxes){
      if(tax.style.display != "inline"){
        tax.style.display = "inline";
      }
      else{
        tax.style.display = "none";
      }
    }
  });
</script>